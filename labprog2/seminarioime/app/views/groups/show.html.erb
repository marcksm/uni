
<h1>Seminars from the group "<%= @group.name %>"</h1>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Place</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @my_seminars.each do |datum| %>
      <tr class="clickable" onclick="trcli(this)" data-href="<%= request.base_url + '/seminars/' + String(datum.id) %>">
        <td><%= datum.name %></td>
        <td><%= datum.description %></td>
        <td><%= datum.place %></td>
        <td><%= datum.date %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= if current_user.professor? then link_to 'Edit', edit_group_path(@group), class: "btn btn-default" end %>
<%= link_to 'Back', groups_path, class: "btn btn-default" %>

<style>
.clickable {
  cursor: pointer;
}
</style>

<script>
  function trcli (bt) {
    window.location.href = bt.getAttribute ("data-href");
  }
</script>
