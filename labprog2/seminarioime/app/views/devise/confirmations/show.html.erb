<style>
.v-space {
  margin-top: 15px;
}
</style>

<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <h2>Confirmation professor registration</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <p class="bg-danger">
        <%= devise_error_messages! %>
      </p>

      <div class="field">
        <%= f.label :nusp %><br />
        <%= f.number_field :nusp, autofocus: true, class: "form-control" %>
        <%= f.text_field :confirmation_token, :as => :hidden, :input_html => { :value => @original_token } %>
      </div>

      <div class="field">
        <%= f.label :name %><br />
        <%= f.text_field :name, class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, class: "form-control" %>
      </div>

      <div class="field">
            <%= f.label :group %>
            <%= f.collection_select :group_id, Group.all, :id, :name, { :include_blank => ""}, class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
      </div>

      <div class="actions v-space">
        <%= f.submit "Sign up", class: "btn btn-info btn-block" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
