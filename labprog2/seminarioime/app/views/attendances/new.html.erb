<h1><%= @seminar.name %></h1>
<hr>
<%= form_tag("/attendances", method: "post") do %>

<div class="row">
  <div class="col-md-6">


  	<p style="text-align: center;">
		<%= text_field_tag "student_nusp", "", class: "form-control", autofocus: "autofocus", placeholder: "NUSP" %>
  	</p>

  </div>
  <div class="col-md-6" style="min-height: 400px">
  	<p style="text-align: center; display: none;" id="qrcode">
  		<%= raw @qrcode.as_svg %>
  	</p>
    <div class="btn btn-danger  btn-block" id="qrcode_btn">Show QR code.</div>

  </div>

</div>
<br>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
  	<%= hidden_field_tag("rand_token", @rand_string) %>
	 <%= submit_tag("Confirm attendance / Next QR", class: "btn btn-info btn-block") %>
  </div>
</div>

<% end %>
<script type="text/javascript">
$('#qrcode_btn').click(function () {
  $('#qrcode_btn').hide(0);
  $('#qrcode').show();
});
</script>
