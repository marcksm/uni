<%= form_with(model: group, local: true) do |form| %>
  <% if group.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <%=
        if group.errors.count == 1
          "Ops! There was #{group.errors.count} error:"
        else
          "Ops! There where #{group.errors.count} errors:"
        end
      %>
      <ul>
      <% group.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :group_name, class: "form-control" %>
  </div>

  <div class="actions">
    <%= form.submit "Save", class: "btn btn-info btn-block" %>
  </div>
<% end %>
